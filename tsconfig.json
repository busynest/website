{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "outDir": "deploy",
    
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "garbage/**/*.ts",
    "node_modules/**/*"
  ]
}
